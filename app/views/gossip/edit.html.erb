<h1>Formulaire d'édition de Gossip</h1>
<div class="container mt-5"> <!-- HTML -->
	<div class="form-group">

		<%= form_for @gossip do |f| %>
			<div class="form-group">
				<label for="formGroupExampleInput">Pseudo :</label>
				<%= f.text_field :user, class: "form-control", id: "formGroupExampleInput" %>
			</div>
			<div class="form-group">
				<label for="formGroupExampleInput">Titre :</label>
				<%= f.text_field :title, class: "form-control", id: "formGroupExampleInput" %>
			</div>
			<div class="form-group">
				<label for="formGroupExampleInput">Ajoute moi du gros gossip :</label>
				<%= f.text_area :content, class: "form-control" %>
			</div>
				<%= f.submit "Update ton Gossip !", class: "btn btn-success" %>

		<% end %>

	</div>

	<%= link_to 'Clique pour détruire', @gossip, method: :delete %>
<hr>
</div>
